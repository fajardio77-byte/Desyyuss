    * { box-sizing: border-box; font-family: 'Poppins', sans-serif; }

    body {
      margin: 0; height: 100vh; overflow: hidden; color: #fff;
      background: #000;
    }

    /* cinematic grain */
    body::after{
      content:''; position:fixed; inset:0; pointer-events:none;
      background-image:url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120"><filter id="n"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="1" stitchTiles="stitch"/></filter><rect width="120" height="120" filter="url(%23n)" opacity="0.035"/></svg>');
      mix-blend-mode: overlay;
    }

    .stage{
      position:absolute; inset:0; display:flex; align-items:center; justify-content:center;
      text-align:center; padding:28px;
    }

    .copy{
      max-width: 520px; width:100%;
      transform: translateY(10px); opacity:0;
      animation: in 1s ease forwards;
    }

    h1{ font-size:2.4rem; margin:0 0 10px; letter-spacing:0.3px; }
    p{ font-size:1.15rem; line-height:1.65; margin:0; }

    .hint{
      position:fixed; bottom:24px; left:50%; transform:translateX(-50%);
      font-size:.85rem; opacity:.7; animation:pulse 1.6s infinite;
    }

    .progress{
      position:fixed; top:18px; left:50%; transform:translateX(-50%);
      display:flex; gap:8px;
    }
    .dot{ width:7px; height:7px; border-radius:50%; background:rgba(255,255,255,.35); }
    .dot.on{ background:#fff; }

    .float{ position:absolute; bottom:-30px; opacity:.7; animation:float 7s linear forwards; }

    @keyframes in{ to{ opacity:1; transform:translateY(0);} }
    @keyframes pulse{ 0%,100%{opacity:.4} 50%{opacity:1} }
    @keyframes float{ to{ transform:translateY(-120vh); opacity:0 } }

    /* typing */
    .typing::after{
      content:'|'; margin-left:2px; animation:blink 1s steps(1) infinite;
    }
    @keyframes blink{ 50%{opacity:0} }

    /* subtle zoom between scenes */
    .zoom{ animation: zoom 1.2s ease both; }
    @keyframes zoom{ from{transform:scale(1.02)} to{transform:scale(1)} }
  
    /* video background */
    .bg-video{
      position:fixed;
