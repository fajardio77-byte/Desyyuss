<body>

<!-- VIDEO BACKGROUND -->
<video class="bg-video" autoplay muted loop playsinline>
  <!-- GANTI src DI BAWAH DENGAN VIDEO DIA -->
  <source src="video-kamu.mp4" type="video/mp4">
</video>
<div class="overlay"></div>

<audio id="music" loop>
  <source src="https://cdn.pixabay.com/audio/2022/10/30/audio_9f84bfa4b1.mp3" type="audio/mpeg">
</audio>

<div class="progress" id="progress"></div>

<div class="stage zoom" id="stage">
  <div class="copy">
    <h1 id="title"></h1>
    <p id="text"></p>
  </div>
</div>

<div class="hint" id="hint">tap anywhere</div>

<script>
  const music = document.getElementById('music');
  const titleEl = document.getElementById('title');
  const textEl  = document.getElementById('text');
  const hint = document.getElementById('hint');
  const stage = document.getElementById('stage');
  const progress = document.getElementById('progress');
  const overlay = document.querySelector('.overlay');
  const video = document.querySelector('.bg-video');

  // =====================
  // SCENES (EDIT DI SINI)
  // =====================
  const scenes = [
    { t: 'Terima kasih sudah bertahan âœ¨', p: 'Hari ini bukan cuma tentang bertambahnya usia, tapi tentang semua hal yang sudah kamu lewati.' },
    { t: 'Tentang kamu ðŸ’—', p: 'Kamu kuat, meski sering nggak kelihatan. Dan itu layak dirayakan.' },
    { t: 'Sedikit harapan ðŸ¤', p: 'Semoga dunia hari ini lebih lembut ke kamu.' },
    { t: 'Untuk nanti', p: 'Kalau capek, ingat: kamu nggak sendirian.' },
    { t: 'Dari aku', p: 'Yang selalu mendoakanmu, diam-diam.' }
  ];

  let i = 0;
  let typingTimer;

  function renderProgress(){
    progress.innerHTML = scenes.map((_,idx)=>`<div class=\"dot ${idx<=i?'on':''}\"></div>`).join('');
  }

  function typeText(el, text){
    clearInterval(typingTimer);
    el.textContent = '';
    el.classList.add('typing');
    let k = 0;
    typingTimer = setInterval(()=>{
      el.textContent += text[k++] || '';
      if(k>text.length){ clearInterval(typingTimer); el.classList.remove('typing'); }
    }, 24);
  }

  function spawnHearts(count = 8){
    for(let n=0;n<count;n++){
      const h=document.createElement('div');
      h.className='float';
      h.textContent='â¤';
      h.style.left=Math.random()*100+'vw';
      h.style.fontSize=(18+Math.random()*12)+'px';
      document.body.appendChild(h);
      setTimeout(()=>h.remove(),7000);
    }
  }

  function cinematicEffects(){
    // beat drop kecil
    overlay.style.background = 'rgba(0,0,0,0.55)';
    video.style.filter = 'grayscale(20%) brightness(0.9)';
    setTimeout(()=>{
      overlay.style.background = 'rgba(0,0,0,0.35)';
      video.style.filter = 'none';
    }, 800);

    // haptic (android)
    if (navigator.vibrate) navigator.vibrate(30);
  }

  function show(){
    const s = scenes[i];
    titleEl.textContent = s.t;
    typeText(textEl, s.p);

    stage.classList.remove('zoom'); void stage.offsetWidth; stage.classList.add('zoom');
    renderProgress();
    spawnHearts(i === scenes.length-1 ? 14 : 8);

    // special cinematic moment
    if(i === scenes.length-2){ cinematicEffects(); }

    // ending freeze
    if(i === scenes.length-1){
      video.pause();
      hint.textContent = 'tap to replay';
    }
  }

  document.body.addEventListener('click', ()=>{
    if(i === 0) music.play();

    if(i < scenes.length-1){
      i++;
      show();
    } else {
      // replay
      i = 0;
      video.currentTime = 0;
      video.play();
      hint.textContent = 'tap anywhere';
      show();
    }
  });

  // init
  show();
</script>

</body>
</html>
